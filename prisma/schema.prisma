// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../prisma-client"
}

datasource db {
  provider = "sqlite"
}

// Modelo para armazenar alertas do Elasticsearch
model Alert {
  id          String   @id
  timestamp   DateTime
  description String
  level       Int
  agentName   String
  ruleName    String
  ruleId      String
  source      String?
  destination String?
  
  // Anotações e status
  annotation  AlertAnnotation?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([timestamp])
  @@index([level])
  @@index([agentName])
  @@index([timestamp, level])
}

// Modelo para anotações, status e anexos dos alertas
model AlertAnnotation {
  id        String   @id @default(cuid())
  alertId   String   @unique
  alert     Alert    @relation(fields: [alertId], references: [id], onDelete: Cascade)
  
  // Status do alerta
  status    String   @default("")
  notes     String   @default("")
  assignedTo String  @default("")
  
  // Attachments
  attachments Attachment[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Modelo para anexos dos alertas
model Attachment {
  id          String   @id @default(cuid())
  annotationId String
  annotation  AlertAnnotation @relation(fields: [annotationId], references: [id], onDelete: Cascade)
  
  fileName    String
  fileType    String
  fileSize    Int
  fileData    String   // Base64 encoded
  
  createdAt   DateTime @default(now())
  
  @@index([annotationId])
}

// Modelo para rastrear sincronização
model SyncLog {
  id          String   @id @default(cuid())
  lastSync    DateTime @default(now()) @updatedAt
  alertsCount Int      @default(0)
  status      String   @default("pending")
  error       String?
}

